vim /etc/ssh/sshd_config	#修改SSH端口
service sshd restart		#重启ssh服务

mentohust					#启动mentohust
ssh root@67.209.187.107 -p 27847		#Ubuntu启动SSH服务

sudo du -sh /* --exclude proc			#查看硬盘使用情况
dpkg --list					#浏览已安装程序清单
sudo apt-get remove			#卸载程序
ps -ef						#查看运行程序
kill PID					#结束指定进程（同上）
su root 					#获得 root 权限。
fdisk -l 					#查看当前分区状况

git commit -a -m "A file was deleted"

